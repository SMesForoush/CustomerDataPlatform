{
  "name": "datastax-connector-json-multi-table-example",
  "config": {
    "connector.class": "com.datastax.oss.kafka.sink.CassandraSinkConnector",
    "tasks.max": "10",
    "topics": "test",
    "contactPoints": "cassandra1,cassandra2",
    "port": "9042",
    "maxNumberOfRecordsInBatch": "10",
    "loadBalancing.localDc": "datacenter1",
    "topic.test.tfidf.df.mapping": "word=value.word, df=value.df",
    "topic.test.tfidf.df.consistencyLevel": "LOCAL_QUORUM",
    "topic.test.tfidf.df.deletesEnabled": false,
    "transforms": "filterValue",
    "transforms.filterValue.filter.condition": "$[?(@.word == 'ios')]",
    "transforms.filterValue.filter.type": "include",
    "transforms.filterValue.type": "io.confluent.connect.transforms.Filter$Value",
    "auth.provider":"PLAIN",
    "auth.username":"cassandra",
    "auth.password":"cassandra"
  }
}